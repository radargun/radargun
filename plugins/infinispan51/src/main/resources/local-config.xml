<?xml version="1.0" encoding="UTF-8"?>

<infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:infinispan:config:5.1"
            xsi:schemaLocation="urn:infinispan:config:5.1 http://www.infinispan.org/schemas/infinispan-config-5.1.xsd">

   <default/>

   <namedCache name="noTx"/>

   <namedCache name="tx">
      <transaction autoCommit="false" transactionManagerLookupClass="org.infinispan.transaction.lookup.DummyTransactionManagerLookup"
                   transactionMode="TRANSACTIONAL" lockingMode="OPTIMISTIC"/>
   </namedCache>

</infinispan>
