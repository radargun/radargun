<local-bench-config>

   <benchmark>
      <PutGetWarmup numberOfRequests="1000000" opsCountStatusLog="100000"/>
      <PutGet numberOfRequests="20000000" opsCountStatusLog="100000000" numOfThreads="25" useTransactions="false" sysMonitorEnabled="true"/>
   </benchmark>

   <products>
      <infinispan50>
         <config file="local-config.xml" cache="noTx" name="50_non_tx"/>
      </infinispan50>
      <infinispan51>
         <config file="local-config.xml" cache="noTx" name="51_non_tx"/>
      </infinispan51>
      <chm>
         <config name="ConcurrentHashMap"/>
      </chm>
   </products>

   <reports>
      <report name="50vs51">
         <item product="infinispan50" config="50_non_tx"/>
         <item product="infinispan51" config="51_non_tx"/>
      </report>
      <report name="All" includeAll="true"/>
   </reports>

</local-bench-config>
