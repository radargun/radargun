<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <artifactId>radargun-aggregator</artifactId>
   <version>1.1.0-SNAPSHOT</version>
   <groupId>org.radargun</groupId>
   <name>RadarGun - Aggregator</name>
   <description>The aggregator for RadarGun</description>
   <packaging>pom</packaging>

   <modules>
      <module>framework</module>
      <module>plugins/infinispan4</module>
      <module>plugins/infinispan50</module>
      <module>plugins/infinispan51</module>
      <module>plugins/infinispan52</module>
      <module>plugins/jgroups</module>
      <module>plugins/jbosscache2</module>
      <module>plugins/jbosscache3</module>
      <module>plugins/ehcache25</module>
      <module>plugins/ehcache26</module>
      <module>plugins/terracotta3</module>
      <module>plugins/chm</module>
   </modules>

   <scm>
      <connection>scm:git:git@github.com:radargun/radargun.git</connection>
      <url>scm:git:git@github.com:radargun/radargun.git</url>
      <developerConnection>scm:git:git@github.com:radargun/radargun.git</developerConnection>
   </scm>

   <properties>
      <distribution.name>RadarGun-${project.version}</distribution.name>
      <distribution.artifact>target/distribution/${distribution.name}</distribution.artifact>
      <distribution.zipfile>target/distribution/${distribution.name}.zip</distribution.zipfile>
   </properties>

   <profiles>
      <profile>
         <id>coherence</id>
         <activation>
            <activeByDefault>false</activeByDefault>
         </activation>
         <modules>
            <module>plugins/coherence3</module>
         </modules>
         <build>
            <plugins>
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-antrun-plugin</artifactId>
                  <version>1.3</version>
                  <executions>
                     <execution>
                        <id>prepare_coherence_plugin</id>
                        <phase>verify</phase>
                        <goals>
                           <goal>run</goal>
                        </goals>
                        <configuration>
                           <tasks>
                              <echo message="Packaging the coherence3 plugin" />
                              <copy todir="${distribution.artifact}/plugins/coherence3">
                                 <fileset dir="plugins/coherence3/target/distribution/plugin-coherence3-bin/plugin-coherence3">
                                    <include name="**/*" />
                                    <exclude name="**/*.jar" />
                                 </fileset>
                              </copy>
                              <copy todir="${distribution.artifact}/plugin-dependencies">
                                 <fileset dir="plugins/coherence3/target/distribution/plugin-coherence3-bin/plugin-coherence3/lib">
                                    <include name="*.jar" />
                                 </fileset>                        
                              </copy>
                              <exec executable="bash" failonerror="true">
                                 <arg value="-c"/>
                                 <arg value="for FILE in `ls plugins/coherence3/target/distribution/plugin-coherence3-bin/plugin-coherence3/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/coherence3/lib/; done;"/>
                              </exec> 
                           </tasks>
                        </configuration>
                     </execution>
                  </executions>
               </plugin>
            </plugins>
         </build>
      </profile>
      <profile>
         <id>jdg</id>
         <activation>
            <activeByDefault>false</activeByDefault>
         </activation>
         <modules>
            <module>plugins/jdg60</module>
            <module>plugins/jdg61</module>
         </modules>
         <build>
            <plugins>
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-antrun-plugin</artifactId>
                  <version>1.3</version>
                  <executions>
                     <execution>
                        <id>prepare_jdg_plugin</id>
                        <phase>verify</phase>
                        <goals>
                           <goal>run</goal>
                        </goals>
                        <configuration>
                           <tasks>
                              <echo message="Packaging the JDG 6.0.x and JDG 6.1.x plugins" />
                              <copy todir="${distribution.artifact}/plugins/jdg60">
                                 <fileset dir="plugins/jdg60/target/distribution/plugin-jdg60-bin/plugin-jdg60">
                                    <include name="**/*" />
                                    <exclude name="**/*.jar" />
                                 </fileset>
                              </copy>
                              <copy todir="${distribution.artifact}/plugin-dependencies">
                                 <fileset dir="plugins/jdg60/target/distribution/plugin-jdg60-bin/plugin-jdg60/lib">
                                    <include name="*.jar" />
                                 </fileset>                        
                              </copy>
                              <exec executable="bash" failonerror="true">
                                 <arg value="-c"/>
                                 <arg value="for FILE in `ls plugins/jdg60/target/distribution/plugin-jdg60-bin/plugin-jdg60/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/jdg60/lib/; done;"/>
                              </exec>

                              <copy todir="${distribution.artifact}/plugins/jdg61">
                                 <fileset dir="plugins/jdg61/target/distribution/plugin-jdg61-bin/plugin-jdg61">
                                    <include name="**/*" />
                                    <exclude name="**/*.jar" />
                                 </fileset>
                              </copy>
                              <copy todir="${distribution.artifact}/plugin-dependencies">
                                 <fileset dir="plugins/jdg61/target/distribution/plugin-jdg61-bin/plugin-jdg61/lib">
                                    <include name="*.jar" />
                                 </fileset>                        
                              </copy>
                              <exec executable="bash" failonerror="true">
                                 <arg value="-c"/>
                                 <arg value="for FILE in `ls plugins/jdg61/target/distribution/plugin-jdg61-bin/plugin-jdg61/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/jdg61/lib/; done;"/>
                              </exec>                    
                           </tasks>
                        </configuration>
                     </execution>
                  </executions>
               </plugin>
            </plugins>
         </build>
      </profile>
   </profiles>

   <build>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-release-plugin</artifactId>
            <version>2.2.2</version>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.3</version>
            <executions>
               <execution>
                  <id>prepare_distribution</id>
                  <phase>post-integration-test</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <tasks>
                        <delete dir="target/distribution" />
                        <mkdir dir="target/distribution" />
                        <mkdir dir="${distribution.artifact}" />
                     </tasks>
                  </configuration>
               </execution>

               <execution>
                  <id>prepare_plugins</id>
                  <phase>verify</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <tasks>
			               <echo message="Generating XSD schema" />
			               <java classname="org.radargun.config.ConfigSchemaGenerator" failonerror="true">
				               <classpath>
							<fileset dir="framework/target/distribution/radargun-framework-bin/radargun-framework/lib">
								<include name="*.jar"/>
							</fileset>
				               </classpath>
				               <arg value="framework/src/main/resources" />
				               <arg value="framework/target/distribution/radargun-framework-bin/radargun-framework/lib/radargun-framework-1.1.0-SNAPSHOT.jar" />
				               <arg value="infinispan4" />
				               <arg value="infinispan50" />
				               <arg value="infinispan51" />
				               <arg value="infinispan52" />
				               <arg value="jgroups" />
				               <arg value="jbosscache2" />
				               <arg value="jbosscache3" />
				               <arg value="ehcache25" />
                           <arg value="ehcache25" />
				               <arg value="terracota3" />
				               <arg value="chm" />
				               <arg value="coherence3" />				               
				               <arg value="jdg60" />
				               <arg value="jdg61" />
			               </java>

                        <echo message="Packaging the framework, and the following plugins: infinispan4, infinispan5, infinispan50, jbosscache2, jbosscache3, ehcache25" />

                        <copy todir="${distribution.artifact}/plugins/infinispan4">
                           <fileset dir="plugins/infinispan4/target/distribution/plugin-infinispan4-bin/plugin-infinispan4">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/infinispan4/target/distribution/plugin-infinispan4-bin/plugin-infinispan4/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/infinispan4/target/distribution/plugin-infinispan4-bin/plugin-infinispan4/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/infinispan4/lib/; done;"/>
                        </exec>

                        <copy todir="${distribution.artifact}/plugins/infinispan50">
                           <fileset dir="plugins/infinispan50/target/distribution/plugin-infinispan50-bin/plugin-infinispan50">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/infinispan50/target/distribution/plugin-infinispan50-bin/plugin-infinispan50/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/infinispan50/target/distribution/plugin-infinispan50-bin/plugin-infinispan50/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/infinispan50/lib/; done;"/>
                        </exec>
                        
                        <copy todir="${distribution.artifact}/plugins/infinispan51">
                           <fileset dir="plugins/infinispan51/target/distribution/plugin-infinispan51-bin/plugin-infinispan51">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/infinispan51/target/distribution/plugin-infinispan51-bin/plugin-infinispan51/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/infinispan51/target/distribution/plugin-infinispan51-bin/plugin-infinispan51/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/infinispan51/lib/; done;"/>
                        </exec>
                       
                        <copy todir="${distribution.artifact}/plugins/infinispan52">
                           <fileset dir="plugins/infinispan52/target/distribution/plugin-infinispan52-bin/plugin-infinispan52">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/infinispan52/target/distribution/plugin-infinispan52-bin/plugin-infinispan52/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/infinispan52/target/distribution/plugin-infinispan52-bin/plugin-infinispan52/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/infinispan52/lib/; done;"/>
                        </exec>                       

                        <copy todir="${distribution.artifact}/plugins/jgroups">
                           <fileset dir="plugins/jgroups/target/distribution/plugin-jgroups-bin/plugin-jgroups">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/jgroups/target/distribution/plugin-jgroups-bin/plugin-jgroups/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/jgroups/target/distribution/plugin-jgroups-bin/plugin-jgroups/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/jgroups/lib/; done;"/>
                        </exec>                       

                        <copy todir="${distribution.artifact}/plugins/jbosscache3">
                           <fileset dir="plugins/jbosscache3/target/distribution/plugin-jbosscache3-bin/plugin-jbosscache3">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/jbosscache3/target/distribution/plugin-jbosscache3-bin/plugin-jbosscache3/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/jbosscache3/target/distribution/plugin-jbosscache3-bin/plugin-jbosscache3/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/jbosscache3/lib/; done;"/>
                        </exec>                       

                        <copy todir="${distribution.artifact}/plugins/jbosscache2">
                           <fileset dir="plugins/jbosscache2/target/distribution/plugin-jbosscache2-bin/plugin-jbosscache2">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/jbosscache2/target/distribution/plugin-jbosscache2-bin/plugin-jbosscache2/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/jbosscache2/target/distribution/plugin-jbosscache2-bin/plugin-jbosscache2/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/jbosscache2/lib/; done;"/>
                        </exec>                       

                        <copy todir="${distribution.artifact}/plugins/ehcache25">
                           <fileset dir="plugins/ehcache25/target/distribution/plugin-ehcache25-bin/plugin-ehcache25">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/ehcache25/target/distribution/plugin-ehcache25-bin/plugin-ehcache25/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/ehcache25/target/distribution/plugin-ehcache25-bin/plugin-ehcache25/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/ehcache25/lib/; done;"/>
                        </exec>                       

                        <copy todir="${distribution.artifact}/plugins/terracotta3">
                           <fileset dir="plugins/terracotta3/target/distribution/plugin-terracotta3-bin/plugin-terracotta3">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/terracotta3/target/distribution/plugin-terracotta3-bin/plugin-terracotta3/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/terracotta3/target/distribution/plugin-terracotta3-bin/plugin-terracotta3/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/terracotta3/lib/; done;"/>
                        </exec> 

                        <copy todir="${distribution.artifact}/plugins/chm">
                           <fileset dir="plugins/chm/target/distribution/plugin-chm-bin/plugin-chm">
                              <include name="**/*" />
                              <exclude name="**/*.jar" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/plugin-dependencies">
                           <fileset dir="plugins/chm/target/distribution/plugin-chm-bin/plugin-chm/lib">
                              <include name="*.jar" />
                           </fileset>                        
                        </copy>
                        <exec executable="bash" failonerror="true">
                           <arg value="-c"/>
                           <arg value="for FILE in `ls plugins/chm/target/distribution/plugin-chm-bin/plugin-chm/lib/`; do ln -s ../../../plugin-dependencies/$FILE ${distribution.artifact}/plugins/chm/lib/; done;"/>
                        </exec> 
                     </tasks>
                  </configuration>
               </execution>

               <execution>
                  <id>build_distro</id>
                  <phase>install</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <tasks>
                        <echo message="Packaging the framework, common scripts and building archive" />
                        <copy todir="${distribution.artifact}">
                           <fileset dir="framework/target/distribution/radargun-framework-bin/radargun-framework">
                              <include name="**/*" />
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/bin">
                           <fileset dir="bin">
                              <include name="**/*" />
                           </fileset>
                        </copy>
                        <chmod perm="ugo+rwx" type="file">
                           <fileset dir="${distribution.artifact}/bin">
                              <include name="**/*.sh" />
                              <include name="**/*.py" />
                           </fileset>
                        </chmod>
                        <!--<zip destfile="${distribution.zipfile}" basedir="target/distribution" excludes="**/bin/**">
                           <zipfileset dir="${distribution.artifact}/bin" filemode="755" prefix="${distribution.name}/bin" />
                        </zip>-->
                        <exec executable="zip" failonerror="true" dir="target/distribution">
                           <arg value="-ry"/>
                           <arg value="${distribution.name}.zip"/>
                           <arg value="${distribution.name}/"/>                           
                        </exec>
                     </tasks>
                  </configuration>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>
</project>
